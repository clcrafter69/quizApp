@model QuizWebApp.Models.AnswerViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Add Answer</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Answers.Id" />
            <div class="form-group">
                <label asp-for="Answers.Response" class="control-label"></label>
                <input asp-for="Answers.Response" class="form-control" />
                <span asp-validation-for="Answers.Response" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Answers.Correct" /> @Html.DisplayNameFor(model => model.Answers.Correct)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Answers.QuestionId" class="control-label"></label>
                <input asp-for="Answers.QuestionId" value="@Model.currentQuestionId" class="form-control"  />
                <span asp-validation-for="Answers.QuestionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    @Html.ActionLink("Back To List", "EditedList", "Answer", new { QuestionId = Model.Answers.QuestionId }, null)
</div>

